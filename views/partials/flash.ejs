<% if(success && success.length) {%>
<div
  class="alert alert-success alert-dismissible fade show mx-width mx-sm-auto mt-4 mx-4"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length) {%>
<div
  class="alert alert-danger alert-dismissible fade show mx-width mx-sm-auto mt-4 mx-4"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
