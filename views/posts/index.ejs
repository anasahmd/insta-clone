<% layout('layouts/boilerplate') %>
<a href="/posts/new">Add a post</a>
<h1 class="fs-3 my-3">All Posts</h1>

<% for (post of posts){ %>
<div class="card my-3 mx-width mx-auto">
  <div class="card-body">
    <div class="d-flex gap-3">
      <div class="flex-shrink-0">
        <img
          src="https://d33wubrfki0l68.cloudfront.net/fb0ba0cbcadbdf0b2ffabf331d2345fb05106e16/20663/images/profile-picture.webp"
          alt=""
          class="rounded-circle"
          id="profile-image"
        />
      </div>
      <div class="d-flex flex-column justify-content-center m-0">
        <p class="fs-7 fw-bolder mb-0">anas_ahmad35</p>
      </div>
    </div>
  </div>
  <img src="<%= post.image %>" alt="" class="img-fluid" />
  <div class="card-body">
    <div class="d-flex gap-3 my-1">
      <a href="" class="text-reset">
        <i class="fa-regular fa-heart"></i>
      </a>
      <a href="" class="text-reset">
        <i class="fa-regular fa-comment"></i>
      </a>
      <a href="" class="text-reset">
        <i class="fa-solid fa-paper-plane"></i>
      </a>
    </div>
    <small class="fw-bolder">100 likes</small>
    <br />
    <% if(post.caption){ %>
    <p class="fs-7 mb-1"><b>anas_ahmad35</b> <%=post.caption %></p>
    <% } %>
    <a href="/posts/<%= post._id %>" class="text-muted fs-7 mb-2"
      >View all comments</a
    >
    <p class="text-muted fs-7 mb-0"><small>Jul 21</small></p>
  </div>
</div>
<% } %>
