<% layout('layouts/boilerplate') %>

<div class="container mx-width">
  <h1 class="fs-3 mb-4">Create new post</h1>
  <form action="/posts" method="POST">
    <div class="mb-4">
      <input
        type="text"
        name="post[image]"
        class="form-control"
        placeholder="Image Url"
      />
    </div>
    <div class="mb-4">
      <input
        type="text"
        name="post[text]"
        class="form-control"
        placeholder="Write a caption"
      />
    </div>
    <div class="d-grid">
      <button class="btn btn-secondary">Share</button>
    </div>
  </form>
</div>
