<% layout('layouts/boilerplate') %>
<div class="card my-3 mx-width mx-auto">
  <div class="card-body py-2">
    <div class="d-flex w-100 gap-3">
      <div class="flex-shrink-0">
        <img
          src="https://d33wubrfki0l68.cloudfront.net/fb0ba0cbcadbdf0b2ffabf331d2345fb05106e16/20663/images/profile-picture.webp"
          alt=""
          class="rounded-circle profile-image"
        />
      </div>
      <div class="d-flex flex-column justify-content-center m-0">
        <a
          href="/<%= post.user.username %>"
          class="fs-7 fw-bolder mb-0 text-reset"
          ><%= post.user.username %></a
        >
      </div>
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn ms-auto btn-custom"
        data-bs-toggle="modal"
        data-bs-target="#post<%= post._id %>"
      >
        <i class="fa-solid fa-ellipsis-vertical fs-6"></i>
      </button>

      <!-- Modal -->
      <div
        class="modal fade"
        id="post<%= post._id %>"
        tabindex="-1"
        aria-labelledby="<%= post._id %>Label"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-sm modal-dialog-centered">
          <div class="modal-content">
            <% if (currentUser && post.user.equals(currentUser)) { %>
            <div class="modal-body text-center border-bottom">
              <form action="/p/<%= post._id %>?_method=DELETE" method="POST">
                <button
                  class="btn btn-outline-danger btn-delete btn-custom py-0 ms-auto"
                >
                  Delete
                </button>
              </form>
            </div>
            <div class="modal-body text-center border-bottom">
              <a href="/p/<%= post._id %>/edit" class="text-reset">Edit</a>
            </div>
            <% } %>
            <div class="modal-body text-center">
              <a href="/p/<%= post._id %>" class="text-reset">Go to post</a>
            </div>
            <div class="modal-footer text-center">
              <button
                type="button"
                class="btn btn-custom py-0 mx-auto"
                data-bs-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <img src="<%= post.image %>" alt="" class="img-fluid" />
  <div class="card-body">
    <div class="d-flex gap-3 my-1">
      <form
        action="/like/<%= post._id %> "
        method="POST"
        class="m-0 p-0 like-form"
      >
        <button class="text-reset p-0 m-0 btn-like">
          <% if(currentUser && post.likes.includes(currentUser._id)){ %>
          <i class="fa-solid fa-heart red-heart"></i>
          <% } else { %>
          <i class="fa-regular fa-heart"></i>
          <% } %>
        </button>
      </form>
      <a href="/p/<%= post._id %>" class="text-reset">
        <i class="fa-regular fa-comment"></i>
      </a>
      <a href="" class="text-reset">
        <i class="fa-solid fa-paper-plane"></i>
      </a>
    </div>
    <div class="like-container">
      <div class="fs-7 mt-2">
        <% if (post.likes.length){ %>
        <span class="fw-bolder"
          ><%= post.likes.length %> <% if(post.likes.length > 1){ %> likes <%
          }else { %> like <% } %>
        </span>
        <% } else { %> Be the first to <b>like this </b>
        <% } %>
      </div>
    </div>
    <% if(post.caption){ %>
    <p class="fs-7 mt-2 mb-0">
      <b
        ><a
          href="/<%= post.user.username %>"
          class="fs-7 fw-bolder mb-0 text-reset"
          ><%= post.user.username %></a
        ></b
      >
      <%=post.caption %>
    </p>
    <% } %>
    <p class="text-muted fs-7 mt-2 mb-0">
      <small><%= post.date%> </small>
    </p>
  </div>

  <% if (currentUser){ %>
  <div class="container py-2 mx-width mx-auto bg-light px-3 rounded mb-2">
    <div class="card-body d-flex gap-3 py-2">
      <div>
        <img
          src="https://d33wubrfki0l68.cloudfront.net/fb0ba0cbcadbdf0b2ffabf331d2345fb05106e16/20663/images/profile-picture.webp"
          alt=""
          class="rounded-circle profile-image"
        />
      </div>
      <form
        action="/p/<%= post._id %>/comments"
        method="POST"
        class="w-100"
        autocomplete="off"
      >
        <div class="d-flex">
          <input
            type="text"
            name="comment[text]"
            class="form-control btn-custom fs-7"
            placeholder="Add a comment..."
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <button class="btn btn-outline-primary btn-opc btn-custom pe-3 fs-7">
            Post
          </button>
        </div>
      </form>
    </div>
  </div>
  <% } %> <% if (post.comments.length){ %>
  <div class="container mb-2">
    <% for (let comment of post.comments){ %>
    <div class="card-body py-2">
      <div class="d-flex gap-3">
        <div>
          <a href="/<%= comment.user.username%>">
            <img
              src="https://d33wubrfki0l68.cloudfront.net/fb0ba0cbcadbdf0b2ffabf331d2345fb05106e16/20663/images/profile-picture.webp"
              alt=""
              class="rounded-circle profile-image"
            />
          </a>
        </div>
        <div>
          <span class="fs-7 mb-0"
            ><a href="/<%= comment.user.username%>" class="me-1 text-reset fw-6"
              ><%= comment.user.username %>
            </a>
            <%= comment.text %></span
          >
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted fs-8">10m</span>
            <span class="text-muted fs-8 bold fw-semibold">100 likes</span>
            <!-- <span class="text-muted fs-8 fw-semibold">Reply</span> -->
            <% if (currentUser && comment.user.equals(currentUser)){ %>
            <span class="text-muted fs-8">
              <!-- Button trigger modal -->
              <button
                type="button"
                class="btn ms-auto btn-custom py-0"
                data-bs-toggle="modal"
                data-bs-target="#comment<%= comment._id %>"
              >
                <i class="fa-solid fa-ellipsis fs-6"></i>
              </button>
            </span>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <% if (currentUser && comment.user.equals(currentUser)){ %>
    <!-- Modal -->
    <div
      class="modal fade"
      id="comment<%= comment._id %>"
      tabindex="-1"
      aria-labelledby="<%= comment._id %>Label"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-body text-center border-bottom">
            <form
              action="/p/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE"
              method="POST"
            >
              <button
                class="btn btn-outline-danger btn-delete btn-custom py-0 ms-auto"
              >
                Delete
              </button>
            </form>
          </div>
          <div class="modal-footer text-center">
            <button
              type="button"
              class="btn btn-custom py-0 mx-auto"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <% } %> <% } %>
  </div>
  <% }else { %>
  <div class="container d-flex align-items-center flex-column my-4">
    <div class="fs-4 mb-2">No comments Yet.</div>
    <div class="fs-7 mb-2">Start the conversation</div>
  </div>
  <% } %>
</div>
